{
  "name": "react-ts-parcel-bp",
  "version": "1.0.0",
  "description": "Boilerplate for React/Typescript with Parcel Bundler",
  "scripts": {
    "start": "npm run dev",
    "dev": "parcel serve src/public/index.html --port 3000 --log-level 3",
    "build": "parcel build src/public/index.html",
    "test": "jest"
  },
  "author": "Adeel Ahmad",
  "license": "ISC",
  "devDependencies": {
    "@types/enzyme": "^3.10.9",
    "@types/node": "^16.10.2",
    "@types/react": "^17.0.26",
    "@types/react-dom": "^17.0.9",
    "http-server": "^13.0.2",
    "parcel-bundler": "^1.12.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "redux-devtools": "^3.7.0",
    "typescript": "^4.4.3",
    "webpack": "^5.56.0",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@types/jest": "^27.0.2",
    "@types/react-redux": "^7.1.18",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "jest": "^27.2.4",
    "jest-extended": "^0.11.5",
    "react-redux": "^7.2.5",
    "redux": "^4.1.1",
    "ts-jest": "^27.0.5"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
